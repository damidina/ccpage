  {% comment %} Ajax - Article, Page {% endcomment %}
  {% when 'ajax--article-page' %}

    {% assign article_page_combination = '' %}
    {% if settings.search--show-articles %}
      {% assign article_page_combination = 'article,' %}
    {% endif %}
    {% if settings.search--show-pages %}
      {% assign article_page_combination = article_page_combination | append: 'page' %}
    {% endif %}

    {% capture count_string %}
      {% if search.results_count > 0 %}
        ({{ search.results_count }})
      {% endif %}
    {% endcapture %}

    <div class="search--info hover-links">
      <div class="search--count"><a href="/search?type={{ article_page_combination }}&q={{ search.terms }}">{{ articles_t }} {{ count_string }}</a></div>

      {% if search.results_count > 0 %}
        <div class="search--view-more">
          <a href="/search?type={{ article_page_combination }}&q={{ search.terms }}">{{ view_all_t }}</a>
        </div>
      {% endif %}
    </div>

    <div class="search--articles-container">
      {% for item in search.results limit: 20 %}
        <div class="search--article hover-links">
          <a href="{{ item.url }}">{{ item.title }}</a>
        </div>
      {% endfor %}

      {% if search.results_count == 0 %}
        <div class="search--no-results">{{ no_results_t }}</div>
      {% endif %}
    </div>

  {% comment %} Ajax - Product {% endcomment %}
  {% when 'ajax--product' %}
    {% capture count_string %}
      {% if search.results_count > 0 %}
        ({{ search.results_count }})
      {% endif %}
    {% endcapture %}

    <div class="search--info hover-links">
      <div class="search--count"><a href="/search?type=product&q={{ search.terms }}">{{ products_t }} {{ count_string }}</a></div>
      {% if search.results_count > 0 %}
        <div class="search--view-more"><a href="/search?type=product&q={{ search.terms }}">{{ view_all_t }}</a></div>
      {% endif %}
    </div>

    <div class="search--products-container">
      {% for product in search.results limit: 12 %}
        <div class="search--product">
          {% include 'partial--product', view: 'grid' %}
        </div>
      {% endfor %}

      {% if search.results_count == 0 %}
        <div class="search--no-results">{{ no_results_t }}</div>
      {% endif %}
    </div>

{% endcase %}

